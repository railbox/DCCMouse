<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="false"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/LocoItemImg"
        android:layout_width="@dimen/locoItemSize"
        android:layout_height="@dimen/locoItemSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/image">
    </ImageView>

    <TextView
        android:id="@+id/LocoItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LocoItemImg"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/LocoItemImg"
        android:layout_toStartOf="@+id/LocoItemAddr"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/LocoItemAddr"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LocoItemName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>